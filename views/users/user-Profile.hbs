<div class="container" id="home">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="card shadow p-3 mb-5 bg-white rounded p-5">
        <form action="/users/user-profile" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="firstName">First Name:</label>
            <input type="text" name="firstName" class="form-control" value="{{upload.firstName}}" />
          </div>
          <div class="form-group">
            <label for="lastName">Last Name:</label>
            <input type="text" name="lastName" class="form-control" value="{{upload.lastName}}" />
          </div>
          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" name="email" class="form-control" value="{{upload.email}}" />
          </div>
          <div class="form-group">
            <label for="dateOfBirth">Dateofbirth:</label>
            <input type="date" name="dateOfBirth" class="form-control" placeholder="{{upload.dateOfBirth}}" />
          </div>
          <div class="form-group">
            <label for="dateOfBirth">Address:</label>
            <input type="text" name="address" class="form-control" value="{{upload.address}}" />
          </div>
          <div class="form-group">
            <label for="occupation">Occupation:</label>
            <input type="text" name="occupation" class="form-control" value="{{upload.occupation}}" />
          </div>
          <div class="form-group">
            <label for="hobbies">Hobbies:</label>
            <input type="text" name="hobbies" class="form-control" value="{{upload.hobbies}}" />
          </div>
          <div class="form-group">
              <input type="file" class="form-control" name="profilePicture">
          </div>
          <button type="submit" class="btn btn-outline-dark btn-block"> Update</button>
        </form>
      </div>
    </div>
  </div>
</div>