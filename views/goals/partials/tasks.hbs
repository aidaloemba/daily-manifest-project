
<ul class="list-group">
  {{#each this}}
      {{#if this.done}}
      <li class="list-group-item">
        <input type="checkbox" name="task" value="{{this._id}}">
        <i class="fas fa-check" aria-hidden="true"></i>
        <label for="task" class="checked" disabled="true">{{this.title}}</label>
      </li>
      {{else}}
      <li class="list-group-item">
        <input type="checkbox" name="task" value="{{this._id}}">

        <label for="task">{{this.title}}</label>
      </li>
      {{/if}}
  {{/each}}
</ul>