<div class="col-sm-6 col-lg-3">
  <div class="card">
    <div class="card-body">
      <h5>{{this.title}}</h5>
      <hr>
      <p><span>{{this.category}}</span></p>
      <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" \
          aria-valuemax="100">25%</div>
      </div>
    </div>
    <div class="card-footer">
      <small class="text-muted">Due: {{this.dueDate}}</small>
      <small><a href="/tasks/create?id={{this.id}}">Tasks</a></small>
        {{!-- <small><a href="/tasks/create?id={{this.id}}" data-toggle="modal" data-target="#addTaskModal" data-goal-id={{this.id}}>Tasks</a></small> --}}
    </div>
  </div>      
</div>

