{{> create}}
{{> createTask}}

<div class="container" id="goals">
  <div class="row">
      <h1>My goals</h1>
      <p><a href="#" data-toggle="modal" data-target="#addGoalModal">Add Goal</a></p>
  </div>
  <div class="row">
    {{#each goals}}
    <div class="col-sm-6 col-lg-4">
      <div class="card">
        <div class="card-body">
          <h5>Learn Basic Dutch</h5>
          <hr>
          <p><span>Lifestyle</span></p>
          <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" \
              aria-valuemax="100">25%</div>
          </div>
        </div>
        <div class="card-footer">
          <small class="text-muted">Due: 20 Jun 2020</small>
          <small><a href="#" data-toggle="modal"  data-target="#addTaskModal">Tasks</a></small>
        </div>
      </div>      
    </div>
     {{/each}}
  </div>
</div>

